<h1><%= @cocktail.name %></h1>

<ul>

  <% @cocktail.doses.each do |dose| %>
  <li>
  <%= dose.ingredient.name  %>
  <%= dose.description %>
  <%= link_to 'Supp', dose_path(dose), method: :delete %>
  </li>
  <% end %>

</ul>

<%= link_to 'Return to the list', cocktails_path %>

<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.association :ingredient %>
  <%= f.input :description %>
  <%= f.submit "add a ingredient", class: "btn btn-primary" %>
<% end %>
